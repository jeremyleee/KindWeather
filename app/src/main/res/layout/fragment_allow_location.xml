<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/allowLocationImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/allowLocationTitle"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_location"/>

    <com.tragicfruit.kindweather.components.WButton
        android:id="@+id/allowLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allow_location_allow"
        app:layout_constraintBottom_toTopOf="@id/allowLocationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/app_margin_xxxx"/>

    <TextView
        android:id="@+id/allowLocationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/allowLocationDesc"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/app_margin_xx"
        android:layout_marginStart="@dimen/app_margin_xxxx"
        android:layout_marginEnd="@dimen/app_margin_xxxx"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        android:text="@string/allow_location_title"/>

    <TextView
        android:id="@+id/allowLocationDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="@dimen/app_margin_xxxx"
        android:layout_marginEnd="@dimen/app_margin_xxxx"
        android:textSize="14sp"
        android:text="@string/allow_location_desc"/>

</androidx.constraintlayout.widget.ConstraintLayout>